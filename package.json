{
  "name": "socratic-learning-platform",
  "version": "1.0.0",
  "description": "AI-Driven Socratic Cognitive Learning Platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node start-all.js",
    "debug": "node debug-and-fix.js",
    "verify": "node verify-setup.js",
    "check-env": "node check-env.js",
    "test-all": "node test-system.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --watch backend --exec ts-node backend/src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "echo 'Run integration tests here - e.g., test API endpoints'",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "keywords": ["learning", "ai", "socratic", "education"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.39.0",
    "zod": "^3.22.4",
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "concurrently": "^8.2.2"
  }
}
